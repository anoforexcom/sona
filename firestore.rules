rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Default rule: Authenticated users can read/write everything (for dev speed)
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Public Read Access for Barbershops and their Subcollections
    match /barbershops/{document=**} {
      allow read: if true;
    }
  }
}